{
  "name": "webpack-template",
  "version": "1.0.0",
  "description": "A reusable template for modern Webpack 5 projects",
  "main": "src/index.js",
  "scripts": {
    "start": "npm run dev",
    "dev": "webpack serve --config webpack.dev.js --open",
    "build": "webpack --config webpack.prod.js",
    "deploy": "git subtree push --prefix dist origin gh-pages"
  },
  "keywords": ["webpack", "template", "frontend", "boilerplate"],
  "devDependencies": {
    "css-loader": "^7.1.2",
    "html-loader": "^5.1.0",
    "html-webpack-plugin": "^5.6.3",
    "style-loader": "^4.0.0",
    "webpack": "^5.100.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2",
    "webpack-merge": "^6.0.1"
  }
}
